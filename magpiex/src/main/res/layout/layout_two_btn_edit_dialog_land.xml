<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dialog_title_height_land"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:paddingLeft="30px"
        android:paddingRight="30px"
        android:background="?attr/x_dialog_title_bg_color"
        android:textColor="?attr/x_dialog_title_text_color"
        android:textSize="@dimen/base_dialog_title_text_size_land"
        android:textStyle="bold"
        tools:text="标题" />

    <View
        android:id="@+id/line_item"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorBlack10" />

    <EditText
        android:id="@+id/et_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:ellipsize="end"
        android:gravity="top|start"
        android:maxLines="3"
        android:inputType="text"
        android:padding="30px"
        android:imeOptions="actionDone"
        android:textColor="?attr/x_dialog_content_text_color"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/base_dialog_title_text_size_land"
        tools:text="消息" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorBlack10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_left"
            android:layout_width="0dp"
            android:layout_height="@dimen/base_dialog_item_height_land"
            android:layout_weight="1"
            android:background="@drawable/item_bg_selector"
            android:gravity="center"
            android:textColor="?attr/x_dialog_btn_bg_color"
            android:textSize="@dimen/base_dialog_title_text_size_land"
            tools:text="取消" />

        <View
            android:layout_width="1px"
            android:layout_height="@dimen/base_dialog_item_height_land"
            android:background="@color/colorBlack10" />

        <TextView
            android:id="@+id/tv_right"
            android:layout_width="0dp"
            android:layout_height="@dimen/base_dialog_item_height_land"
            android:layout_weight="1"
            android:background="@drawable/item_bg_selector"
            android:gravity="center"
            android:textColor="?attr/x_dialog_btn_bg_color"
            android:textSize="@dimen/base_dialog_title_text_size_land"
            tools:text="确定" />
    </LinearLayout>
</LinearLayout>